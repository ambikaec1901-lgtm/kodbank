{
    "version": 2,
    "builds": [
        {
            "src": "frontend/api/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "frontend/api/server.js"
        },
        {
            "src": "/(.*\\.(js|css|png|jpg|svg|ico|woff|woff2|ttf|json))",
            "dest": "frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ],
    "env": {
        "VERCEL": "1",
        "NODE_ENV": "production"
    }
}